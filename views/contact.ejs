<% include partials/header%>
<div class="container-fluid p-0">
    <div id="admin-image" class="row bgimg m-0">
        <div class="person col-md-6">
            <div class="contact2 text-center"><i class="fas fa-envelope"></i></div>
            <h3 id="contact-heading" class="text-center font-weight-bold pb-2 mb-3 mt-2">Contact us</h3>
            <form id="contact" class="p-5 mb-5" method="post" action="/contact">
              <div class="form-row mb-5">
                <div class="col">
                  <input name="name" type="text" class="form-control" placeholder="Name" required>
                </div>
                <div class="col">
                  <input name="email" type="email" class="form-control" placeholder="Email">
                </div>
              </div>
              <div class="form-row mb-5">
                <div class="col">
                  <input name="phone" type="text" class="form-control" placeholder="Phone" required>
                </div>
                <div class="col">
                  <input name="subject" type="text" class="form-control" placeholder="Subject" required>
                </div>
              </div>
              <div class="form-group">
                <textarea name="message" class="form-control" rows="3" required>Message</textarea>
              </div>
              <div class="text-center"><button type="submit" class="btn btn-primary">Submit</button></div>
            </form>
        </div>
    </div>
</div>
<% include partials/footer%>