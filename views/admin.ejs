<% include partials/header%>

<div id="admin" class="container-fluid p-0 position-relative">
    <div id="overlay"></div>
    <div id="admin-image" class="row bgimg m-0">
        <div id="form-emails" class="col-md-6 mb-5">
            <h1 class="mb-5">Admin Page</h1>
            <form id="contact" action="/admin" method="POST" class="p-3" enctype="multipart/form-data">
              <h5 class="p-3">Send an email to all customers</h5>
              <div class="form-group">
                  <input type="text" class="form-control" name="subject" placeholder="Subject">
              </div>
              <div class="form-group">
                 <label for="image">Upload image</label>
                 <input type="file" class="form-control-file" id="image" name="image" accept="image/*">
              </div>
              <div class="form-group">
                  <textarea class="form-control" name="message" rows="10">Type your message here...</textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-lg mb-3">Send</button>
            </form>
            <form method="POST" id="contact" action="/offer" class="mt-5 p-3">
                <h5>Special Offer Box</h5>
                <div class="form-group">
                    <select class="form-control" name="switch">
                        <option value="on">On</option>
                        <option value="off">Off</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="text" maxlength="50">Type a special offer here ...</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div id="table" class="table-responsive col-md-10">
            <h3 class="mb-5">Online Appointments</h3>
            <table class="table table-striped table-dark">
                    <thead>
                            <tr>
                              <th scope="col">#</th>
                              <th scope="col">Name</th>
                              <th scope="col">Phone Number</th>
                              <th scope="col">Email</th>
                              <th scope="col">Doctor</th>
                              <th scope="col">Date</th>
                              <th scope="col"><form method="POST" action="/admin/deleteAll?_method=DELETE"><button class="btn btn-danger">Delete all</button></form></th>                              
                            </tr>
                    </thead>
                    <tbody>
                        <% for (i = 0; i < booked.length; i++) { %>
                            <tr>
                                <th scope="row"><%= i + 1 %></th>
                                <td><%= booked[i].name %></td>
                                <td><%= booked[i].phone %></td>
                                <td><%= booked[i].email %></td>
                                <td><%= booked[i].doctor %></td>
                                <td><%= booked[i].date.toLocaleString() %></td>
                                <td><form method="POST" action="/admin/<%= booked[i]._id %>?_method=DELETE"><button class="btn btn-danger">Delete</button></form></td>                                
                            </tr>
                        <% } %>
                    </tbody>
            </table>
        </div>
    </div>
</div>
<% include partials/footer%>